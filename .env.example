# Personal Service Manager - Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# =============================================================================
# Vercel Deployment Configuration
# =============================================================================
# Vercel Project Configuration
VERCEL_ORG=your-vercel-org
VERCEL_PROJECT=personal-service-manager

# Vercel Environment (production, preview, development)
VERCEL_ENV=development

# Vercel CLI Authentication (for automated deployments)
VERCEL_TOKEN=your-vercel-api-token

# =============================================================================
# Supabase Configuration
# =============================================================================
# Supabase Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Service Key (for backend operations)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Anonymous Key (for frontend operations)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Database Connection (for migrations and direct access)
SUPABASE_DB_HOST=your-project-id.db.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-db-password

# =============================================================================
# ntfy.sh Notification Service
# =============================================================================
# ntfy.sh Server URL (default: https://ntfy.sh)
NTFY_URL=https://ntfy.sh

# ntfy.sh Topic Name (for application notifications)
NTFY_TOPIC=personal-service-notifications

# ntfy.sh Authentication (if using self-hosted with auth)
NTFY_USERNAME=
NTFY_PASSWORD=

# ntfy.sh Priority (1=min, 3=default, 5=max)
NTFY_PRIORITY=3

# =============================================================================
# Frontend Configuration
# =============================================================================
# Vue.js Configuration
VITE_APP_TITLE=Personal Service Manager
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Frontend API Endpoints
VITE_API_BASE_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# =============================================================================
# Backend Configuration
# =============================================================================
# Express.js Configuration
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# Session and Security
SESSION_SECRET=your-super-secret-session-key-here
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Database Configuration (Alternative to Supabase)
# =============================================================================
# Use these only if not using Supabase
DATABASE_URL=postgresql://username:password@localhost:5432/personal_service_manager

# =============================================================================
# Logging and Monitoring
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/Disable specific log types
ENABLE_DATABASE_LOGGING=true
ENABLE_API_LOGGING=true
ENABLE_AUTH_LOGGING=true

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
# SMTP Server Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email From Address
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# File Storage Configuration
# =============================================================================
# Local file storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific features
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_USER_REGISTRATION=true

# =============================================================================
# Development Configuration
# =============================================================================
# Development-only settings
DEV_DB_SYNCHRONIZE=true
DEV_DROP_TABLES=false
DEV_SEED_DATA=true

# =============================================================================
# Production Configuration
# =============================================================================
# Production-only settings (overridden in production environment)
PROD_DB_SYNCHRONIZE=false
PROD_DROP_TABLES=false
PROD_SEED_DATA=false

# =============================================================================
# CI/CD Configuration
# =============================================================================
# GitHub Actions (if using)
GITHUB_TOKEN=your-github-token
GITHUB_REPOSITORY=owner/personal-service-manager

# =============================================================================
# Third-party Service Integrations
# =============================================================================
# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry (optional - error tracking)
SENTRY_DSN=your-sentry-dsn

# Stripe (optional - for future payments)
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# =============================================================================
# Testing Configuration
# =============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/personal_service_manager_test

# Test Settings
TEST_TIMEOUT=30000
TEST_CLEANUP=true

# =============================================================================
# Security Headers
# =============================================================================
# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_CONNECT_SRC="'self' https://*.supabase.co wss://*.supabase.co https://ntfy.sh"

# Other Security Headers
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=true
HELMET_CROSS_ORIGIN_OPENER_POLICY=true
HELMET_CROSS_ORIGIN_RESOURCE_POLICY=true
HELMET_ORIGIN_AGENT_CLUSTER=true
HELMET_REFERRER_POLICY=true
HELMET_STRICT_TRANSPORT_SECURITY=true
HELMET_X_CONTENT_TYPE_OPTIONS=true
HELMET_X_DNS_PREFETCH_CONTROL=true
HELMET_X_FRAME_OPTIONS=true
HELMET_X_PERMITTED_CROSS_DOMAIN_POLICIES=true
HELMET_X_POWERED_BY=false
HELMET_X_XSS_PROTECTION=true

# =============================================================================
# Docker Configuration (Optional)
# =============================================================================
# Docker Settings
DOCKER_IMAGE_NAME=personal-service-manager
DOCKER_TAG=latest
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# =============================================================================
# Backup Configuration
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# Performance Optimization
# =============================================================================
# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# =============================================================================
# Environment-specific Overrides
# =============================================================================
# Development
# .env.development will override these values

# Production  
# .env.production will override these values

# =============================================================================
# Required Variables for Production Deployment
# =============================================================================
# The following variables MUST be set in production:
# - SUPABASE_URL
# - SUPABASE_SERVICE_KEY
# - SUPABASE_ANON_KEY
# - SESSION_SECRET
# - JWT_SECRET
# - NTFY_TOPIC
# - VERCEL_TOKEN
# - VERCEL_ORG
# - VERCEL_PROJECT

# =============================================================================
# Optional Variables
# =============================================================================
# The following variables are optional and have defaults:
# - NTFY_URL (defaults to https://ntfy.sh)
# - PORT (defaults to 3001 for backend, 3000 for frontend)
# - LOG_LEVEL (defaults to info)
# - All email configuration (optional)
# - All third-party integrations (optional)